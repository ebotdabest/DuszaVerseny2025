<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DuszaVerseny2025.GamePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DuszaVerseny2025"
             xmlns:views="clr-namespace:DuszaVerseny2025.Views"
             BackgroundColor="#1a1a1a">
    <Grid RowDefinitions="Auto, 150, *, 150, Auto"
          ColumnDefinitions="*, 250">
        <Label Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Text="{Binding TopLabelText}"
               FontSize="18"
               FontFamily="RetroByte"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,20,0,10"/>

        <Grid Grid.Row="1"
              Grid.Column="0"
              Margin="10">
            <Border BackgroundColor="#333333"
                    Stroke="Black"
                    StrokeThickness="2"/>

            <HorizontalStackLayout x:Name="EnemyDeckHolder"
                                   Spacing="10"
                                   Padding="0,0,50,0"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
        </Grid>

        <Border Grid.Row="2"
                Grid.Column="0"
                BackgroundColor="#444444"
                Stroke="Black"
                StrokeThickness="2"
                Margin="10">
            <Grid RowDefinitions="*, Auto, *"
                  ColumnDefinitions="*">

                <Grid Grid.RowSpan="3">
                    <Button Text="Start game!"
                            Clicked="StartButton_clicked"
                            IsVisible="{Binding ShowStart}"
                            BackgroundColor="#2c3e50"
                            TextColor="White"
                            FontSize="16"
                            FontFamily="RetroByte"
                            WidthRequest="100"
                            HeightRequest="40"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Loaded="HandleHoverSoItLooksNice"/>

                    <views:GameCard Grid.Row="2"
                                    x:Name="ArenaPlayerCard"
                                    HorizontalOptions="Center"
                                    VerticalOptions="End"
                                    Margin="0,10,0,0"
                                    IsVisible="{Binding ShowCurrent}"
                                    CardName="{Binding CurrentName}"
                                    CardHealth="{Binding CurrentHealth}"
                                    CardDamage="{Binding CurrentDamage}"
                                    IsBoss="False"/>

                    <views:GameCard Grid.Row="0"
                                    x:Name="ArenaEnemyCard"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,0,0,10"
                                    IsVisible="{Binding ShowEnemy}"
                                    CardName="{Binding EnemyName}"
                                    CardHealth="{Binding EnemyHealth}"
                                    CardDamage="{Binding EnemyDamage}"
                                    IsBoss="False"/>

                    <Border
                        BackgroundColor="#3F000000"
                        StrokeThickness="0"
                        HorizontalOptions="Fill"
                        VerticalOptions="Center"
                        Padding="15"
                        HeightRequest="230"
                        IsVisible="{Binding ShowEnd}"
                        ZIndex="5">

                        <VerticalStackLayout Spacing="6"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center">
                            <Label Text="{Binding EndText}"
                                TextColor="{Binding EndColor}"
                                HorizontalOptions="Center"
                                FontSize="48"
                                FontFamily="RetroByte"/>
                            <Label Text="{Binding EndReward}"
                                TextColor="#FFFFE600"
                                HorizontalOptions="Center"
                                FontSize="24"
                                FontFamily="RetroByte"/>
                            <Button Text="Vissza"
                                    Clicked="BackButton_Clicked"
                                    BackgroundColor="Gray"
                                    TextColor="White"
                                    WidthRequest="120"
                                    HeightRequest="35"
                                    FontSize="32"
                                    FontFamily="RetroByte"
                                    HorizontalOptions="Center"
                                    x:Name="BackButton"
                                    Loaded="HandleHoverSoItLooksNice"
                                    />
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <Label x:Name="DamagePopupLabel"
                       Grid.RowSpan="3"
                       FontSize="48"
                       FontFamily="RetroByte"
                       FontAttributes="Bold"
                       TextColor="Red"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Opacity="0"
                       Scale="0"
                       IsVisible="False"/>
            </Grid>
        </Border>

        <Border Grid.Row="3"
                Grid.Column="0"
                BackgroundColor="#333333"
                Stroke="Black"
                StrokeThickness="2"
                Margin="10">
            <HorizontalStackLayout HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   x:Name="PlayerDeckHolder"/>
        </Border>

        <Border Grid.Row="1"
                Grid.Column="1"
                Grid.RowSpan="3"
                BackgroundColor="#2c3e50"
                Stroke="Black"
                StrokeThickness="1"
                Margin="10">
            <VerticalStackLayout Margin="10">
                <Label Text="Események ▼"
                       FontSize="16"
                       FontFamily="RetroByte"
                       FontAttributes="Bold"/>
                <ScrollView HeightRequest="500">
                    <VerticalStackLayout x:Name="HistoryContainer"/>
                </ScrollView>
            </VerticalStackLayout>
        </Border>

        <Label Grid.Row="4"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Text="{Binding RoundText}"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               FontFamily="RetroByte"
               Margin="0,10,0,20"
               TextColor="White"/>
    </Grid>
</ContentPage>
