<?xml version="1.0" encoding="utf-8" ?>
<ContentView
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="DuszaVerseny2025.Controls.MultiLineButton"
        x:Name="Root"
        Padding="0">

        <Frame
                HasShadow="False"
                CornerRadius="{Binding CornerRadius, Source={x:Reference Root}}"
                BackgroundColor="{Binding BackgroundColor, Source={x:Reference Root}}"
                Padding="{Binding Padding, Source={x:Reference Root}}"
                BorderColor="{Binding BorderColor, Source={x:Reference Root}}">

                <Grid>
                        <Label
                                x:Name="MainLabel"
                                Text="{Binding Text, Source={x:Reference Root}}"
                                LineBreakMode="WordWrap"
                                HorizontalTextAlignment="Start"
                                VerticalTextAlignment="Center"
                                FontFamily="{Binding FontFamily, Source={x:Reference Root}}"
                                FontSize="{Binding FontSize, Source={x:Reference Root}}"
                                TextColor="{Binding TextColor, Source={x:Reference Root}}"/>
                </Grid>

                <Frame.GestureRecognizers>
                        <TapGestureRecognizer
                                Command="{Binding Command, Source={x:Reference Root}}"
                                CommandParameter="{Binding CommandParameter, Source={x:Reference Root}}"/>
                </Frame.GestureRecognizers>
        </Frame>
</ContentView>